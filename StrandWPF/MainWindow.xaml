<Window x:Class="StrandWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StrandWPF"
        mc:Ignorable="d"
        Title="Fürdők" Height="450" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Fürdő adatai" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Név" HorizontalAlignment="Left" Margin="0,58,0,10" VerticalAlignment="Top"/>
        <TextBox x:Name="Tbx_Nev" HorizontalAlignment="Stretch" Margin="0,89,0,10" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Cím" HorizontalAlignment="Left" Margin="0,128,0,10" VerticalAlignment="Top"/>
        <TextBox x:Name="Tbx_Cim" HorizontalAlignment="Stretch" Margin="0,159,0,10" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Ár" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="Tbx_Ar" HorizontalAlignment="Stretch" Margin="0,235,0,10" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Vízhőfok" HorizontalAlignment="Left" Margin="0,271,0,10" VerticalAlignment="Top"/>
        <TextBox x:Name="Tbx_Vizhofok" HorizontalAlignment="Stretch" Margin="0,302,0,10" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ProgressBar x:Name="Pb_toltes" HorizontalAlignment="Stretch" Height="23" Margin="0,336,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Btn_Mentes" Content="Mentés" HorizontalAlignment="Stretch" Margin="0,376,0,0" VerticalAlignment="Top" Click="Btn_Mentes_Click"/>
        <DataGrid x:Name="Dg_adatok" Grid.Column="1" SelectionChanged="Dg_adatok_SelectionChanged"/>

    </Grid>
</Window>
